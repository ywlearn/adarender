<div id="{{id}}" style="width: {{width}}px;height: {{height}}px;margin-left:-50px;max-width:1000px;"></div>
<script type="text/javascript">
  var chart_{{id}} = echarts.init(document.getElementById('{{id}}'));

  var option = {
    title: {
      text: '{{title}}',
      subtext: '{{subtext}}',
    },    
    legend: {
      data: [
{{#each legenddata}}      
        '{{this}}',
{{/each}}          
      ],
    },    
    xAxis: {
        type: '{{xtype}}',
        silent: false,
        splitLine: {
            show: false
        },
{{#if xshowall}}        
        axisLabel: {
          interval:0
        },
{{/if}}
        data: adadata_{{datasetname}}.{{xdata}}
    },
    yAxis: {
        type: '{{ytype}}'
    },
    series: [
{{#each ydata}}
    {
        name: '{{{this.name}}}',
        data: adadata_{{../datasetname}}.{{{this.data}}},
        type: 'bar',
        areaStyle: {}
    },
{{/each}}    
    ]
  };

  chart_{{id}}.setOption(option);
</script>