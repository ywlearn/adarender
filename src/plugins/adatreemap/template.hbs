<div id="{{id}}" style="width: {{width}}px;height: {{height}}px;"></div>
<script type="text/javascript">
  var chart_{{id}} = echarts.init(document.getElementById('{{id}}'));

  var treemaplevels = [
        {
          itemStyle: {
            normal: {
              borderColor: '#555',
              borderWidth: 4,
              gapWidth: 4
            }
          }
        },
        {
          colorSaturation: [0.3, 0.6],
          itemStyle: {
            normal: {
              borderColorSaturation: 0.7,
              gapWidth: 2,
              borderWidth: 2
            }
          }
        },
        {
          colorSaturation: [0.3, 0.5],
          itemStyle: {
            normal: {
              borderColorSaturation: 0.6,
              gapWidth: 1
            }
          }
        },
        {
          colorSaturation: [0.3, 0.5]
        }
      ];

  var option = {
    title: {
      text: '{{title}}',
      subtext: '{{subtext}}',
    },
    legend: {
      data: [
{{#each legenddata}}
        '{{this}}',
{{/each}}
      ],
      selected: {
{{#each legenddataselected}}
        '{{this.name}}': {{this.selected}},
{{/each}}
      },      
    },
    series: [
{{#each treemap}}    
    {
      name: '{{this.name}}',
      type: 'treemap',
      leafDepth: 1,
      levels: treemaplevels,
      data: {{{this.jsondata}}},
      roam: false,
    },
{{/each}}    
    ]
  };

  chart_{{id}}.setOption(option);
  chart_{{id}}.on('click', (ele) => {
    if (ele && ele.componentSubType == 'treemap' && 
      ele.componentType == 'series' && ele.seriesType = 'treemap') {
      
      if (ele.treePathInfo && ele.treePathInfo.length > 0) {
        if (typeof ele.treePathInfo[ele.treePathInfo.length - 1].url === 'string' && 
          ele.treePathInfo[ele.treePathInfo.length - 1].url != '') {

          window.open(ele.treePathInfo[ele.treePathInfo.length - 1].url, '_blank');
        }
      }
    }
  });
</script>